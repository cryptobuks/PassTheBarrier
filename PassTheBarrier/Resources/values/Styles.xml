<?xml version="1.0" encoding="utf-8"?>

<resources>
  <style name="PassTheBarrier.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:statusBarColor">@color/primary_dark</item>
    <item name="android:navigationBarColor">@color/primary_dark</item>
    <item name="android:windowBackground">@color/windowBackground</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="colorButtonNormal">@color/accent</item>
    <item name="colorControlNormal">@color/primary</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="colorControlHighlight">@color/primary_light</item>
  </style>

  <style name="PassTheBarrier.Main" parent="PassTheBarrier.Base">
    <item name="android:windowBackground">@android:color/white</item>
  </style>

  <style name="PassTheBarrier.Splash" parent="PassTheBarrier.Base">
    <item name="android:windowBackground">@drawable/splash_centered</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="Toolbar">
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="PassTheBarrier.ThemeToolbarNavigationView" parent="">
    <item name="android:listDivider">@color/primary_dark</item>
  </style>

  <style name="PassTheBarrier.PageLayout" parent="">
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
  </style>

  <style name="PassTheBarrier.EditTextLabel" parent="">
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">Roboto Regular</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:paddingTop">16dp</item>
    <!--    <item name="android:paddingBottom">8dp</item>-->
    <item name="android:paddingLeft">3dp</item>
  </style>

  <style name="PassTheBarrier.EditText" parent="">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">Roboto Regular</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:inputType">text</item>
  </style>

  <style name="PassTheBarrier.EditTextErrorLabel" parent="">
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">Roboto Regular</item>
    <item name="android:textColor">@color/error</item>
    <item name="android:paddingTop">2dp</item>
  </style>

  <style name="PassTheBarrier.Spinner" parent="">
    <item name="android:paddingTop">9dp</item>
  </style>

  <style name="PassTheBarrier.SpinnerDropDownLayout" parent="">
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>

  <style name="PassTheBarrier.SpinnerText" parent="">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">Roboto Regular</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:singleLine">true</item>
  </style>

  <style name="PassTheBarrier.CountryFlagImage" parent="">
    <item name="android:layout_height">23dp</item>
    <item name="android:layout_width">23dp</item>
<!--    <item name="android:paddingBottom">4dp</item>-->
    <item name="android:paddingLeft">3dp</item>
    <item name="android:paddingRight">7dp</item>
  </style>

  <style name="PassTheBarrier.EditTextErrorIcon" parent="">
    <!--    <item name="android:paddingTop">8dp</item>-->
    <item name="android:paddingRight">7dp</item>
    <item name="android:src">@drawable/ic_error_outline_black_18dp</item>
  </style>

  <style name="PassTheBarrier.PrimaryText" parent="">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">Roboto Regular</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>

  <style name="PassTheBarrier.SecondaryText" parent="">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">Roboto Regular</item>
    <item name="android:textColor">@color/secondary_text</item>
  </style>

  <style name="PassTheBarrier.Button" parent="PassTheBarrier.Base">
    <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
  </style>

  <style name="PassTheBarrier.RaisedButton" parent="PassTheBarrier.Button">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">Roboto Medium</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:minWidth">88dp</item>
  </style>

  <style name="PassTheBarrier.FloatingActionButton" parent="">
    <item name="android:layout_width">56dp</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:layout_margin">20dp</item>
  </style>

</resources>